pkgname=husky-smapi
pkgver=1.9.20110421
pkgrel=2
epoch=
pkgdesc="Husky Squash messagebase API"
arch=('x86_64' 'i686')
url="http://husky.sourceforge.net"
license=('GPL')
groups=('ftn')
depends=('ftn-common'
  'husky-lib')
makedepends=('ftn-common'
  'husky-lib')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=('http://iweb.dl.sourceforge.net/project/husky/husky/1.9-current/husky-all-1.9-source-20110421.tgz')
noextract=()
sha1sums=('8ef6c34714fcdee4af8a26c9d09f8717025310fe')


build() {
  cd "$srcdir/husky"
  cp "$startdir/huskymak.cfg" huskymak.cfg
  make -C smapi
}

package() {
  cd "$srcdir/husky"
  make -C smapi DESTDIR="$pkgdir" LDCONFIG=true install
}

